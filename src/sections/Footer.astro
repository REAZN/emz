---
import { Icon } from "astro-icon";
import { social, details } from "../config";
---

<footer id="findus">
    <div id="grid" class="grid grid-cols-1 md:center sm:mb-10">

        <div class="bg-backgroundAlt relative flex flex-col justify-center items-center aspect-square sm:aspect-auto lg:aspect-square sm:py-12 gap-6 order-3 lg:order-1">
            <img src="/images/logo.svg" width="220" alt="Em'z"/>
            <span class="font-bold text-sm">GET IN TOUCH</span>
            <ul class="flex items-center space-x-4 text-lg uppercase font-medium">
                {social.map(social => (
                    <li class="hover:scale-110 transition-transform">
                        <a href={social.url} target="_blank" rel="noreferrer" aria-label={social.title}>
                            <Icon name={social.icon} className="h-6" />
                        </a>
                    </li>
                ))}
            </ul>
            <div class="flex flex-col absolute left-1/2 -translate-x-1/2 bottom-2 w-full text-center text-sm">
                <span>2016 - {new Date().getFullYear()}</span>
                <a href="https://github.com/reazn" aria-label="Link to website authors GutHub">Made by Lewis Thompson</a>
            </div>
        </div>

        <div class="bg-accent flex flex-col justify-center items-center aspect-square order-1">
            <div class="aspect-square space-y-6">
                <h2 class="font-bold text-3xl">FIND US</h2>
                <h3 class="font-bold text-xl">ADDRESS</h3>
                <address class="whitespace-pre-wrap font-medium not-italic">{details.address}</address>
                <h3 class="font-bold text-xl">HOURS</h3>
                <span class="whitespace-pre-wrap font-medium uppercase">{details.hours}</span>
            </div>
        </div>

        <div class="bg-blue-400 w-full aspect-square order-2">
            <!-- It's a restricted key -->
            <iframe 
                class="w-full h-full"
                loading="lazy"
                title="Google map location for Em'z salon"
                allowfullscreen
                src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJ89QP_uZDe0gRI1bWQZb4ZEE&key=AIzaSyD15nLvr8SerIu1SgF8Y6JrO9fqNHocxbY">
            </iframe>
        </div>

    </div>
</footer>

<style>
    @media screen(sm) {
        #grid {
            grid-template-columns: 1fr 1fr;
        }
        #grid > :nth-child(1) {
            grid-column: span 2;
        }
    }

    @media screen(lg) {
        #grid {
            /* grid-template-columns: 1fr 1fr 1fr; */
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
        #grid > :nth-child(1) {
            grid-column: span 1;
        }
    }
</style>